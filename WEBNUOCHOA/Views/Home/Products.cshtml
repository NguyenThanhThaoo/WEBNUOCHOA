
@using WEBNUOCHOA.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<NUOCHOA>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #products .item .thumb img {
        width: 250px;
    }
</style>
<section class="section" id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Các Sản Phẩm Nước Hoa Đang Kinh Doanh Tại Đại Perfume</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var n in Model)
            {
                <div class="col-lg-4">

                    <div class="item">
                        <div class="thumb">
                            <div class="hover-content">
                                <ul>
                                    <li><a href="/Home/ChiTietNuocHoa/@n.MaNH"><i class="fa fa-eye"></i></a></li>
                                    <li><a href="single-product.html"><i class="fa fa-star"></i></a></li>
                                    <li><a href="@Url.Action("ThemGioHang", "GioHang", new {ms = @n.MaNH,url = Request.Url.ToString()})"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <img src="~/Content/img/@n.HinhMinhHoa" alt="" class="img-product">
                        </div>
                        <div class="down-content">
                            <h5>@n.TenNH</h5>
                            <span>@n.DonGia</span>
                            @*<ul class="stars">
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                </ul>*@
                        </div>
                    </div>

                </div>
            }
            <div class="col-lg-12">
                <div class="pagination">
                    <ul>
                        <li class="active">
                            <a href="#">1</a>
                        </li>
                        <li>
                            <a href="#">2</a>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#">4</a>
                        </li>
                        <li>
                            <a href="#">></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
@*Tạo liên kết các trang*@
Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Products", new { iMaCD = ViewBag.MaCD, page = page }))
</div>
<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>
